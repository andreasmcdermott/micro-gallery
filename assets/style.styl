body
  background #fff
  margin 0
  padding 30px
  -webkit-font-smoothing antialiased
  font-family Menlo

  @media (min-width: 992px)
    padding 45px

a
  color #1A00F2
  text-decoration none
  
  &:focus
    outline none
    border 1px dotted black
    margin -1px

h1
  font-size 18px
  font-weight 500
  margin-top 0
  color #000
  font-family -apple-system, Helvetica
  display flex

  i 
    font-style normal

  a 
    color inherit
    font-weight bold
    border-bottom 1px dashed transparent

    &:after 
      content '/'
    
    &:hover 
      color #7d7d7d
    
  @media (min-width: 992px) 
    font-size 15px
  
main 
  //max-width 920px

ul 
  margin 0
  padding 20px 0 0 0

  li 
    list-style none
    padding 0
    font-size 14px
    display flex
    justify-content space-between

    i 
      color #9B9B9B
      font-size 11px
      display block
      font-style normal
    
    @media (min-width: 992px) 
      font-size 13px
      box-sizing border-box
      justify-content flex-start

      &:hover i 
        opacity 1
      
      i 
        font-size 10px
        opacity 0
        margin-left 10px
        margin-top 3px
      
  @media (min-width: 768px) 
    display flex
    flex-wrap wrap

.directories
  li
    @media (min-width: 768px) 
      width 230px
      padding 10px 20px 10px 0

  a 
    color #1A00F2
    white-space nowrap
    overflow hidden
    display block

    &:before 
      content '\f114'
      font-family FontAwesome
      display inline-block
      margin-right 10px
      color #000
    
    &:hover 
      color #000

.images
  li
    @media (min-width: 768px)
      height 230px
      padding-right 20px
      margin-bottom: 10px

    img
      height 230px

.image--zoomed
  display none
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  padding 0
  margin 0
  background rgba(255, 255, 255, 0.7)

  img
    width auto
    height auto
    max-width 90%
    max-height 90%
    box-shadow 4px 4px 8px rgba(0, 0, 0, 0.5)

.zoomed
  overflow hidden

  .image--zoomed
    display block
